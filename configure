#!/usr/bin/env ruby

$current_dir = File.dirname(File.expand_path(__FILE__))
Dir[File.join($current_dir, "setup/*.rb"),File.join("/usr/local/lib/ruby/gems/2.4.0/gems/cocoapods-1.2.1/lib/cocoapods/installer.rb")].each do |file|
  require_relative(file)
end

pod_name = ARGV.shift
Pod::TemplateConfigurator.new(pod_name).run
